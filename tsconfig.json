{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "composite": true,
    "declaration": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@genai-test-manager/types": ["libs/types/src"],
      "@genai-test-manager/types/*": ["libs/types/src/*"],
      "@genai-test-manager/utils": ["libs/utils/src"],
      "@genai-test-manager/utils/*": ["libs/utils/src/*"]
    }
  },
  "exclude": ["**/node_modules", "**/dist"]
}
